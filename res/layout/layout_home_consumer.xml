<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg_color"
    android:orientation="vertical"
    android:padding="8dp" >

    <ProgressBar
        android:id="@+id/progressbar2"
        style="@style/ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/four_border_bg"
            android:divider="@color/color_alerts_listview_description_secondary_text"
            android:dividerHeight="2dp"
            android:scrollbarSize="2dp"
            android:fadeScrollbars="true"
            android:scrollbarThumbVertical="@drawable/ic_scroll_bae_image" >
        </ListView>
    </LinearLayout>

</LinearLayout>